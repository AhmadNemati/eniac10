<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary_"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|right"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:background="#eaecfb"
        >

        <TextView
            android:id="@+id/tvIataCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/textColor3"
            android:layout_marginRight="5dp"
            android:background="@drawable/background45"
            android:minWidth="50dp"
            />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:textSize="14dp"
            android:textAppearance="@style/IranSansBold"
            android:gravity="center|right"
            android:textColor="@color/textColor3"
            android:layout_marginRight="5dp"
        />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="@style/IconFonts"
            android:gravity="center"
            android:textColor="@color/textColor3"
            android:text="@string/location_icon"
           />


    </LinearLayout>





    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSubLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

</LinearLayout>