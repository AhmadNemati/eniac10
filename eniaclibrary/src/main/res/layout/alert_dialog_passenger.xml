<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/colorPrimary_"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMAdault"

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/minus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvCAdault"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/item_background4"
                    android:gravity="center"
                    android:textColor="@color/textColor3"
                    android:textSize="12dp"
                    android:text="1"
                    />


                <TextView
                    android:id="@+id/tvPAdault"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/plus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بزرگسال"
                    android:textColor="@color/white"
                    android:textAppearance="@style/IranSansBold"
                    android:textSize="16dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(12)"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shadow_b" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMChild"

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/minus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvCChild"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/item_background4"
                    android:gravity="center"
                    android:textColor="@color/textColor3"
                    android:textSize="12dp"
                    android:text="0"
                    />


                <TextView
                    android:id="@+id/tvPChild"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/plus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کودک"
                    android:textColor="@color/white"
                    android:textAppearance="@style/IranSansBold"
                    android:textSize="16dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(6 تا 12)"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shadow_b" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMInfant"

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/minus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvCInfant"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/item_background4"
                    android:gravity="center"
                    android:textColor="@color/textColor3"
                    android:textSize="12dp"
                    android:text="0"
                    />


                <TextView
                    android:id="@+id/tvPInfant"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/plus_market_icon"
                    android:textAppearance="@style/IconFontMarket"
                    android:textColor="@color/white"
                    android:textSize="20dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نوزاد"
                    android:textColor="@color/white"
                    android:textAppearance="@style/IranSansBold"
                    android:textSize="16dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(6)"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    />

            </LinearLayout>


        </LinearLayout>


        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/btnConfirm"


            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_30dp"
            android:background="@drawable/button_background"
            app:spinning_bar_width="3dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAppearance="@style/IranSansBold"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/textSize_14dp"
            android:layout_gravity="center"
            app:initialCornerAngle="50dp"
            app:finalCornerAngle="50dp"
            android:transitionName="transition"
            android:layout_marginBottom="5dp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>